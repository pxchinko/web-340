<!DOCTYPE html>
<html lang="en">
  <%- include ("header") %>

  <body>
    <%- include ("navbar") %>
  <section id="list">
    <div class="container">
      <% if employees.length) { %>
        <a href="/new">Add New Employee</a>
      <table>
        <thead>
          <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Position</th>
            <th>Department</th>
          </tr>
        </thead>
        <tbody>
          <% employees.forEach(function(entry) { %>
          <tr>
            <td><%= entry.firstName %></td>
            <td><%= entry.lastName %></td>
            <td><%= entry.jobPosition %></td>
            <td><%= entry.department %></td>
          </tr>
        </tbody>
        <% }) %>
      </table>
      <% } else { %>
      No entries! <a href='/new'>Add New Employee</a>
    <% } %>
    </div>
  </section>  

    <%- include ("scripts") %>
  </body>
</html>